@page "/ExpiringPCFHeaders"
@inject NavigationManager NavigationManager
@inject DataService DataService
@inject IUserService UserService

<h3>Active PCFs</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    if (endDateSummary.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>End Date</th>
                    <th>Number of PCFs</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var summary in endDateSummary)
                {
                    <tr>
                        <td>@summary.EndDate.ToShortDateString()</td>
                        <td>
                            <a style="cursor: pointer; text-decoration: underline;" @onclick="() => LoadPCFsByEndDate(summary.EndDate)">
                                @summary.PCFCount
                            </a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>

        @if (selectedPCFs.Any())
        {
            <h4>PCFs Expiring on @selectedEndDate?.ToShortDateString()</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer Number</th>
                        <th>Customer Name</th>
                        <th>PCF Number</th>
                        <th>PCF Type</th>
                        <th>Number of Items</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pcf in selectedPCFs)
                    {
                        <tr>
                            <td>@pcf.CustomerNumber</td>
                            <td>@pcf.CustomerName</td>
                            <td>
                                <a href="#" @onclick="() => OpenPCFEditor(pcf.PcfNumber)">
                                    @pcf.PcfNumber
                                </a>
                            </td>
                            <td>@pcf.PcfType</td>
                            <td>@pcf.ItemCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    else
    {
        <p>No active PCFs found.</p>
    }
}

@code {
    private bool isLoading = true;
    private List<EndDateSummary> endDateSummary = new();
    private List<PCFDetail> selectedPCFs = new();
    private DateTime? selectedEndDate;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        var headers = await DataService.GetPCFHeadersAsync("Active");

        endDateSummary = headers
            .GroupBy(h => h.EndDate.Date)
            .Select(g => new EndDateSummary
                {
                    EndDate = g.Key,
                    PCFCount = g.Count()
                })
            .OrderBy(s => s.EndDate)
            .Take(10) // Limit the number of EndDates
            .ToList();

        isLoading = false;
    }



    private async Task LoadPCFsByEndDate(DateTime endDate)
    {
        Console.WriteLine($"LoadPCFsByEndDate called with EndDate: {endDate}");
        selectedEndDate = endDate;
        var headers = await DataService.GetPCFHeadersAsync("Active");
        selectedPCFs = headers
            .Where(h => h.EndDate.Date == endDate.Date)
            .OrderBy(h => h.CustomerNumber)
            .Select(h => new PCFDetail
            {
                CustomerNumber = h.CustomerNumber,
                CustomerName = h.CustomerName,
                PcfNumber = h.PcfNumber,
                PcfType = h.PcfType,
                ItemCount = DataService.GetItemsDtoNorepAsync(h.PcfNumber).Result.Count
            })
            .ToList();
    }



    private void OpenPCFEditor(string pcfNumber)
    {
        NavigationManager.NavigateTo($"/PCFEditor/{pcfNumber}");
    }

    private class EndDateSummary
    {
        public DateTime EndDate { get; set; }
        public int PCFCount { get; set; }
    }

    private class PCFDetail
    {
        public string CustomerNumber { get; set; }
        public string CustomerName { get; set; }
        public string PcfNumber { get; set; }
        public string PcfType { get; set; }
        public int ItemCount { get; set; }
    }
}
